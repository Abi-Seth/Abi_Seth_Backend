    "schemes": ["https"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/api/v1/admin/addAdmin": {
            "post": {
                "tags": ["Administration"],
                "summary": "Register new administrator",
                "description": "Register a new user and add administration privileges to the user",
                "consumes": ["application/json"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User object that we want to be added to the database",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": ["username", "email", "password"],
                            "properties": {
                                "username": {
                                    "type": "string",
                                    "uniqueItems": true
                                },
                                "email": {
                                    "type": "string",
                                    "uniqueItems": true
                                },
                                "password": {
                                    "type": "string"
                                },
                                "profilePicture": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin created successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "403": {
                        "description": "Admin with details ( username / email ) already exist"
                    },
                    "404": {
                        "description": "Admin not found"
                    }
                }
            }
        }
    }
}